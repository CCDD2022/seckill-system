# 服务器配置
server:
  port: 8080
  mode: debug  # debug, release, test
  read_timeout: 60
  write_timeout: 60

# 日志配置
log:
  level: info
  format: json
  output: both  # console, file, both
  file_path: ./logs/app.log
  max_size: 100    # MB
  max_backups: 3
  max_age: 30      # days

# 服务配置
services:
  api_gateway:
    host: 0.0.0.0
    port: 8080
  
  user_service:
    host: localhost
    port: 50051
  
  product_service:
    host: localhost
    port: 50052
  
  auth_service:
    host: localhost
    port: 50053
  
  seckill_service:
    host: localhost
    port: 50054
  
  order_service:
    host: localhost
    port: 50055

# 数据库配置
database:
  mysql:
    host: localhost
    port: 3306
    user: root
    password: your_password_here
    dbname: seckill_shop
    max_open_conns: 100
    max_idle_conns: 10
  
  redis:
    host: localhost
    port: 6379
    password: ""
    db: 0

# JWT配置
jwt:
  secret: "your-secret-key-change-in-production"
  expire_hours: 72

# RabbitMQ配置
mq:
  host: localhost
  port: 5672
  user: guest
  password: guest
