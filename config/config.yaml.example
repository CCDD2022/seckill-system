# 服务器配置
server:
  port: 8080
  mode: debug  # debug, release, test
  read_timeout: 60
  write_timeout: 60

# 日志配置
log:
  level: info
  format: json
  output: both  # console, file, both
  file_path: ./logs/app.log
  max_size: 100    # MB
  max_backups: 3
  max_age: 30      # days

# 服务配置
services:
  api_gateway:
    host: 0.0.0.0
    port: 8080
  
  user_service:
    host: localhost
    port: 50051
  
  product_service:
    host: localhost
    port: 50052
  
  auth_service:
    host: localhost
    port: 50053
  
  seckill_service:
    host: localhost
    port: 50054
  
  order_service:
    host: localhost
    port: 50055

# 数据库配置 (Redis 专用使用集群模式)
database:
  mysql:
    host: localhost
    port: 3306
    user: root
    password: your_password_here
    dbname: seckill_shop
    max_open_conns: 200
    max_idle_conns: 50

  redis:
    host: localhost
    port: 6379
    password: ""           # 有密码则填写
    db: 0

# JWT配置
jwt:
  secret: "your-secret-key-change-in-production"
  expire_hours: 72

# RabbitMQ配置 + 批处理参数 / 消费预取
mq:
  host: localhost
  port: 5672
  user: guest
  password: guest
  channel_pool_size: 32
  consumer_prefetch: 1000
  order_batch_size: 200
  order_batch_interval_ms: 100

# 限流 (可按压测/生产调整)
rate_limits:
  global:
    rps: 10000
    burst: 20000
  seckill:
    rps: 3000
    burst: 6000
  order:
    rps: 5000
    burst: 10000
